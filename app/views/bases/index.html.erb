<h1><%= t("Listing bases") %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th width="100"><%= t("Name")%></th>
      <th><%= t("Service text")%></th>
      <th width="120"><%= t("Maintenance")%></th>
      <% if current_user && admin? %>
      <th width="40"></th>
      <% end -%>
    </tr>
  </thead>

  <tbody>
    <% @bases.each do |basis| %>
      <tr>
        <td><%= basis.name %></td>
        <td><%= basis.service_text %></td>
        <td><%= basis.maintenance %></td>
        <% if current_user && admin? %>
        <td><%= link_to image_tag('edit.png'), edit_basis_path(basis) %>
        <%= link_to image_tag('delete.png'), basis, confirm: 'Are you sure?', method: :delete %></td>
        <% end -%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('New Basis'), new_basis_path, :class=>"button" %>
